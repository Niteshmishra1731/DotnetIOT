- task: CopyFiles@2 

      inputs: 

        SourceFolder: 'manifests/' 

        Contents: '**/*.yml' 

        TargetFolder: '$(Pipeline.Workspace)/manifests' 

 

    - task: PublishPipelineArtifact@1 

      inputs: 

        targetPath: '$(Pipeline.Workspace)/manifests' 

        artifact: 'manifests' 

        publishLocation: 'pipeline' 
